// Quiz Mode Component
const QuizMode = ({
  data,
  title,
  quizAnswers,
  showResults,
  onAnswerSelect,
  onSubmit,
  onReset,
  score,
  total,
}) => (
  <div className="bg-white rounded-lg shadow-lg p-8">
    <h2 className="text-2xl font-bold text-purple-600 mb-6">{title}</h2>
    <div className="space-y-6 mb-8">
